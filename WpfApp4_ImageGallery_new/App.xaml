<Application x:Class="WpfApp4_ImageGallery_new.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp4_ImageGallery_new"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MyBorderStyle" TargetType="Border">
            <!--<Setter Property="Control.Background" Value="PaleGreen"/>-->
            <!--<Setter Property="Window.Title" Value="Styled Window"/>-->
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush"  Value="#FF747474" />
            <Setter Property="Background" Value="#FFFCFDDF" />
            <Setter Property="Width" Value="160" />
            <Setter Property="Height" Value="140"/>
        </Style>
        <Style x:Key="MyBorderInnerImage" TargetType="Border">
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="LightGray" />
        </Style>

    </Application.Resources>
</Application>
